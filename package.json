{
  "name": "mern-template",
  "version": "1.0.0",
  "description": "Simple template for the MERN stack",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn run dev",
    "dev": "concurrently \"cd client && yarn run start\" \"cd server && yarn run dev\"",
    "init": "concurrently \"cd client && yarn install\" \"cd server && yarn install\"",
    "lint": "eslint --ext .js,.jsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx .",
    "prettier": "prettier --check client/src server/src",
    "prettify": "prettier --write client/src server/src",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.20.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "babel-jest": "^26.6.0",
    "jest": "26.6.0"
  }
}
